<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Background Image and Overlay go here if you want them-->
    <!-- For simplicity, let's assume the background is handled by the parent container -->

    <ImageView
        android:id="@+id/logoImgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboardTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="DASHBOARD"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoImgView"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/hello_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboardTxt">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pending_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_layout">

        <ImageView
            android:id="@+id/report_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="Pending Musics"
            android:padding="8dp"
            android:src="@drawable/ic_report"
            app:tint="#FF0000" />

        <TextView
            android:id="@+id/number_of_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Pending musics: "
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/number_of_pending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/approved_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pending_layout">

        <ImageView
            android:id="@+id/cloudDone_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="Musics are approved"
            android:padding="8dp"
            android:src="@drawable/ic_cloud_done"
            app:tint="#87FF00" />

        <TextView
            android:id="@+id/number_of_approved_songs_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Approved Songs: "
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/number_of_approved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/approved_layout">

        <ImageView
            android:id="@+id/person4_icon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:contentDescription="Person_4 Icon"
            android:padding="8dp"
            android:src="@drawable/ic_person_4"
            app:tint="#FFC100" />

        <TextView
            android:id="@+id/number_of_users_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Created Users: "
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/number_of_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>