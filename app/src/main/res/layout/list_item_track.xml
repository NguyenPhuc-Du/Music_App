<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Ảnh bìa (Không đổi) -->
    <ImageView
        android:id="@+id/logo_track"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_cloud_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Các nút (Không đổi) -->
    <Button
        android:id="@+id/approve_track_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Approve"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/buttonBarButtonStyle"
        app:layout_constraintBottom_toTopOf="@+id/delete_track_btn"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/delete_track_btn"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Delete"
        android:textSize="14sp"
        android:textColor="@color/white"
        style="?android:attr/buttonBarButtonStyle"
        app:layout_constraintEnd_toEndOf="@+id/approve_track_btn"
        app:layout_constraintStart_toStartOf="@+id/approve_track_btn"
        app:layout_constraintTop_toBottomOf="@+id/approve_track_btn"
        app:layout_constraintBottom_toBottomOf="parent" />


    <!-- Khối thông tin (ĐÃ CẬP NHẬT) -->
    <LinearLayout
        android:id="@+id/information_song_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/logo_track"
        app:layout_constraintEnd_toStartOf="@+id/approve_track_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/songName_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/singerName_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singer name"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/status_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>