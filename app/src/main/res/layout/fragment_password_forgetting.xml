<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.PasswordForgettingFragment">


    <!--Background for forgot password-->
    <ImageView
        android:id="@+id/forgotPasswordBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login" />


    <!--Overlay background-->
    <View
        android:id="@+id/gradientOverlayForgotPasswordBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay_background" />


    <!--Forgot Password card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/forgotPasswordCard"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--Overlay for forgot password form-->
            <View
                android:id="@+id/gradientOverlayForgotPasswordForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay_background" />


            <!--Forgot Password Title-->
            <TextView
                android:id="@+id/forgotPasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Forgot Password"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--Email form-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailInputLayoutForgotPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="Email: "
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTitle">


                <!--Email input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailValueLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />


            </com.google.android.material.textfield.TextInputLayout>


            <!--Get code button-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btntakeKeyForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:backgroundTint="@color/white"
                android:text="Get Code"
                android:textColor="@color/black"
                app:cornerRadius="5sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailInputLayoutForgotPassword" />


            <!--Password input-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newPasswordForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:hint="Password:"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/codeInputLayoutForgotPassword">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </com.google.android.material.textfield.TextInputLayout>

            <!--Code form-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/codeInputLayoutForgotPassword"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:padding="0dp"
                app:hintEnabled="false"
                android:textColorHint="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailInputLayoutForgotPassword">


                <!--Code input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/codeValueForgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/white"/>


            </com.google.android.material.textfield.TextInputLayout>


            <!--Register button-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="15sp"
                android:backgroundTint="#E10914"
                android:text="Reset Password"
                android:textColor="@color/white"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newPasswordForm" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
