<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:background="@drawable/gradient_overlay_now_playing">

    <!-- Nút Play/Pause -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playContainer"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="23dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:indeterminate="false"
                android:progressDrawable="@drawable/process_circle_bar"/>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play"
                app:tint="@color/black"
                android:contentDescription="Play/Pause"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tên bài hát & nghệ sĩ -->
    <LinearLayout
        android:id="@+id/trackDetailsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/playContainer"
        app:layout_constraintEnd_toStartOf="@id/btnLikeNowPlaying"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTrackTitleNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvTrackSourceNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Nút follow -->
    <ImageButton
        android:id="@+id/btnFollowNowPlaying"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_follow"
        app:tint="@color/black"
        app:layout_constraintEnd_toStartOf="@id/btnLikeNowPlaying"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"/>

    <!-- Nút like -->
    <ImageButton
        android:id="@+id/btnLikeNowPlaying"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
